<div
  id="mobile-menu"
  class="fixed inset-0 z-50 hidden md:hidden"
>
  <!-- Backdrop -->
  <div
    class="absolute inset-0 bg-black/40"
    data-close-menu
  ></div>

  <!-- Sliding panel -->
  <aside
    id="mobile-menu-panel"
    class="absolute left-0 top-0 h-full w-4/5 max-w-sm
           bg-white shadow-xl
           -translate-x-full
           transition-transform duration-300"
  >
    <nav class="flex flex-col p-6 space-y-6 text-lg">
      <a href="/services" data-close-menu>Services</a>
      <a href="/about" data-close-menu>About</a>
      <a href="/contact" data-close-menu>Contact</a>
    </nav>
  </aside>
</div>

<script>
  const menu = document.getElementById("mobile-menu");
  const panel = document.getElementById("mobile-menu-panel");

  const openButton = document.getElementById("menu-button");

  openButton?.addEventListener("click", () => {
    menu?.classList.remove("hidden");
    panel?.classList.remove("-translate-x-full");
  });

  function closeMenu() {
    panel?.classList.add("-translate-x-full");
    setTimeout(() => {
      menu?.classList.add("hidden");
    }, 300);
  }

  document.querySelectorAll("[data-close-menu]").forEach((el) => {
    el.addEventListener("click", closeMenu);
  });
</script>