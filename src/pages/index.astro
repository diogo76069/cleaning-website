---
import Layout from "../layouts/Layout.astro";
import ServiceCard from "../components/ServiceCard.astro";

const pageTitle = "Cleaning Website";
---

<Layout pageTitle={pageTitle}>
  <!-- Hero -->
  <section class="bg-white py-24 border-b border-gray-200">
    <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h1 class="text-5xl font-bold text-gray-900 mb-6">
          Professional Cleaning Services
        </h1>
        <p class="text-lg text-gray-600 mb-8">
          Reliable residential and commercial cleaning in your area.
        </p>
        <div class="flex justify-center md:justify-start">
          <a
            href="/contact"
            class="relative inline-block overflow-hidden px-8 py-5 font-semibold
         text-white bg-blue-100 rounded-lg group max-w-max text-center">
            <span
              class="absolute inset-0 bg-blue-700 translate-x-0
           group-hover:translate-x-full transition-transform duration-500 ease-in-out"
            ></span>

            <span
              class="relative z-10 group-hover:text-blue-700
           transition-colors duration-500">
              Make an Appointment
            </span>
          </a>
        </div>
      </div>

      <div class="h-80 bg-gray-100 rounded-xl"></div>
    </div>
  </section>
  <section class="py-24 bg-gray-50 border-b border-gray-200">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        About us
      </h2>

      <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-10 leading-relaxed">
        We are committed to delivering consistent, high-quality cleaning
        services for homes and businesses. Our focus is reliability, attention
        to detail, and customer satisfaction.
      </p>

      <a
        href="/about"
        class="inline-block font-semibold text-blue-600 hover:text-blue-700 transition-all
        duration-300">
        Learn more about us →
      </a>
    </div>
  </section>
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <!-- Section Header -->
      <div class="mb-16 max-w-2xl">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Our Services
        </h2>
        <p class="text-gray-600">
          Professional cleaning solutions tailored to your needs.
        </p>
      </div>

      <!-- Grid -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 mb-12">
        <ServiceCard
          title="Residential Cleaning"
          description="Expert cleaning for apartments and houses to keep your home spotless."
        />

        <ServiceCard
          title="Office Cleaning"
          description="Maintain a clean and productive workspace with our scheduled office cleaning solutions."
        />

        <ServiceCard
          title="Deep Cleaning"
          description="Detailed and thorough cleaning for kitchens, bathrooms, and high-traffic areas."
        />
      </div>

      <!-- Single CTA -->
      <div class="text-center mt-12">
        <a
          href="/about"
          class="inline-block font-semibold text-blue-600 hover:text-blue-700 transition-colors">
          More info →
        </a>
      </div>
    </div>
  </section>
</Layout>
